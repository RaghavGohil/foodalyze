<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Sign-Up Form</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }
    body {
      background-color: #121212;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .container {
      background: #1e1e1e;
      padding: 40px;
      border-radius: 12px;
      width: 450px;
      text-align: center;
      color: white;
      box-shadow: 0 4px 12px rgba(255, 255, 255, 0.1);
    }
    .container h2 {
      margin-bottom: 20px;
      font-size: 24px;
    }
    input {
      width: 100%;
      padding: 12px;
      margin: 12px 0 6px;
      border: none;
      border-radius: 6px;
      background: #2a2a2a;
      color: white;
      font-size: 16px;
    }
    span {
      font-size: 14px;
      color: red;
      display: block;
      text-align: left;
    }
    .gender-group {
      display: flex;
      align-items: center;
      justify-content: flex-start;
      gap: 10px;
      margin-top: 10px;
    }
    .gender-group label {
      color: #cccccc;
      font-size: 16px;
    }
    .gender {
      display: flex;
      gap: 20px;
      align-items: center;
      color: #cccccc;
    }
    .gender label {
      display: flex;
      align-items: center;
      gap: 5px;
      margin: 0;
      line-height: 1;
    }
    .gender input[type="radio"] {
      transform: scale(1.1);
      margin: 0;
    }
    .age-group {
      text-align: left;
      margin-top: 10px;
    }
    .btn {
      width: 100%;
      padding: 14px;
      background: #ff6b6b;
      border: none;
      border-radius: 6px;
      color: white;
      font-size: 18px;
      cursor: pointer;
      margin-top: 15px;
      transition: 0.3s;
    }
    .btn:hover {
      background: #ff4f4f;
    }
    .google-btn {
      background: #ffffff;
      color: #000;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
      font-size: 16px;
      padding: 12px;
    }
    .google-btn img {
      width: 24px;
      height: 24px;
    }
    .login-link {
      margin-top: 20px;
      font-size: 16px;
    }
    .login-link a {
      color: #D27F89;
      text-decoration: none;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="container">
    <form id="signupForm">
      <h2>SIGN-UP</h2>

      <input type="text" id="firstName" name="firstName" placeholder="First Name" required />
      <span id="firstNameError"></span>

      <input type="text" id="lastName" name="lastName" placeholder="Last Name" required />
      <span id="lastNameError"></span>

      <input type="email" id="email" name="email" placeholder="Email Address" required />
      <span id="emailError"></span>

      <input type="password" id="password" name="password" placeholder="Password" required />
      <span id="passwordError"></span>

      <div class="gender-group">
        <label for="gender">Gender:</label>
        <div class="gender">
          <label><input type="radio" name="gender" value="Male" required /> Male</label>
          <label><input type="radio" name="gender" value="Female" required /> Female</label>
        </div>
      </div>

      <div class="age-group">
        <input type="text" id="age" name="age" inputmode="numeric" pattern="[0-9]*" placeholder="Enter your age" required />
        <span id="ageError"></span>
      </div>

      <button type="submit" class="btn">Create Account</button>
    </form>

    <button class="btn google-btn">
      <img src="google.png" alt="Google">
      Continue with Google
    </button>

    <p class="login-link">Already have an account? <a href="#">Login</a></p>
  </div>

  <script>
    document.getElementById("signupForm").addEventListener("submit", function (e) {
      e.preventDefault();

      document.getElementById('firstNameError').textContent = "";
      document.getElementById('lastNameError').textContent = "";
      document.getElementById('emailError').textContent = "";
      document.getElementById('passwordError').textContent = "";
      document.getElementById('ageError').textContent = "";

      const firstName = document.getElementById("firstName").value.trim();
      const lastName = document.getElementById("lastName").value.trim();
      const email = document.getElementById("email").value.trim();
      const password = document.getElementById("password").value.trim();
      const age = document.getElementById("age").value.trim();

      let isValid = true;

      const nameRegex = /^[A-Za-z]{2,}$/;
      if (!nameRegex.test(firstName)) {
        document.getElementById('firstNameError').textContent = "Enter a valid first name (at least 2 letters).";
        isValid = false;
      }

      if (!nameRegex.test(lastName)) {
        document.getElementById('lastNameError').textContent = "Enter a valid last name (at least 2 letters).";
        isValid = false;
      }

      const emailPattern = /^[^ ]+@[^ ]+\.[a-z]{2,3}$/;
      if (!email.match(emailPattern)) {
        document.getElementById('emailError').textContent = "Please enter a valid email address.";
        isValid = false;
      }

      const passwordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{8,}$/;
      if (!password.match(passwordPattern)) {
        document.getElementById('passwordError').textContent =
          "Password must be at least 8 characters long and include uppercase, lowercase, number, and special character.";
        isValid = false;
      }

      if (!/^\d+$/.test(age) || parseInt(age) < 1 || parseInt(age) > 120) {
        document.getElementById('ageError').textContent = "Please enter a valid age between 1 and 120.";
        isValid = false;
      }

      if (isValid) {
        alert("Account created successfully!");
        // Add server request/logic here if needed
      }
    });
  </script>
</body>
</html>
 