<link rel="stylesheet" href="/css/login.css">
<div class="container">
  <h2>Login</h2>
  <!-- Login Form -->
  <form id="loginForm" action="/api/auth/login" method="POST">
    <input type="email" id="email" name="email" placeholder="Email Address" required>
    <div id="emailError" class="error-message"></div>

    <input type="password" id="password" name="password" placeholder="Password" required>
    <div id="passwordError" class="error-message"></div>

    <p class="forgot-password"><a href="/forgot-password">Forgot Password?</a></p>
    <button type="submit" class="btn">Login</button>
  </form>
  <!-- Continue with Google -->
  <button type="button" class="btn google-btn" onclick="continueWithGoogle()">
    <img src="/assets/google-logo.png" alt="Google" />
    Continue with Google
  </button>
  <!-- Signup Link -->
  <p class="login-link">Don't have an account? <a href="/signup">Sign Up</a></p>
</div>
