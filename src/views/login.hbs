<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login Form</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }
    body {
      background-color: #121212;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .container {
      background: #1e1e1e;
      padding: 40px;
      border-radius: 12px;
      width: 400px;
      text-align: center;
      color: white;
      box-shadow: 0 4px 12px rgba(255, 255, 255, 0.1);
    }
    .container h2 {
      margin-bottom: 20px;
      font-size: 24px;
      color: white;
    }
    input {
      width: 100%;
      padding: 12px;
      margin: 12px 0;
      border: none;
      border-radius: 6px;
      background: #2a2a2a;
      color: white;
      font-size: 16px;
    }
    .btn {
      width: 100%;
      padding: 14px;
      background: #ff6b6b;
      border: none;
      border-radius: 6px;
      color: white;
      font-size: 18px;
      cursor: pointer;
      margin-top: 15px;
      transition: 0.3s;
    }
    .btn:hover {
      background: #ff4f4f;
    }
    .google-btn {
      background: #ffffff;
      color: #000;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
      font-size: 16px;
      padding: 12px;
      border-radius: 6px;
      border: none;
      margin-top: 10px;
      cursor: pointer;
    }
    .google-btn img {
      width: 24px;
      height: 24px;
    }
    .forgot-password {
      text-align: right;
      font-size: 14px;
      margin-top: -10px;
    }
    .forgot-password a {
      color: #D27F89;
      text-decoration: none;
    }
    .login-link {
      margin-top: 20px;
      font-size: 16px;
    }
    .login-link a {
      color: #D27F89;
      text-decoration: none;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>LOGIN</h2>
    
    <!-- Login Form -->
    <form id="loginForm">
        <input type="email" id="email" placeholder="Email Address" required>
        <div id="emailError" style="color: #ff6b6b; font-size: 14px; text-align: left;"></div>
      
        <input type="password" id="password" placeholder="Password" required>
        <div id="passwordError" style="color: #ff6b6b; font-size: 14px; text-align: left;"></div>
      
        <p class="forgot-password"><a href="forgot-password.html">Forgot Password?</a></p>
        <button type="submit" class="btn">LOGIN</button>
      </form>

    <!-- Continue with Google -->
    <button type="button" class="btn google-btn" onclick="continueWithGoogle()">
      <img src="Google logo.png" alt="Google">
      Continue with Google
    </button>

    <!-- Signup Link -->
    <p class="login-link">Don't have an account? <a href="signup.html">Sign Up</a></p>
  </div>

  <!-- JavaScript -->
  <script>
    document.getElementById('loginForm').addEventListener('submit', function (e) {
      e.preventDefault();
  
      // Clear old error messages
      document.getElementById('emailError').textContent = '';
      document.getElementById('passwordError').textContent = '';
  
      const email = document.getElementById('email').value.trim();
      const password = document.getElementById('password').value.trim();
  
      let isValid = true;
  
      // Email validation
      const emailPattern = /^[^ ]+@[^ ]+\.[a-z]{2,3}$/;
      if (!email.match(emailPattern)) {
        document.getElementById('emailError').textContent = "Please enter a valid email address.";
        isValid = false;
      }
  
      // Password validation
      const passwordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{8,}$/;
      if (!password.match(passwordPattern)) {
        document.getElementById('passwordError').textContent =
          "Password must be at least 8 characters long and include uppercase, lowercase, number, and special character.";
        isValid = false;
      }
  
      if (!isValid) return;
  
      // If valid, send data to backend
      fetch('http://localhost:5000/login', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ email, password })
      })
        .then(response => response.json())
        .then(data => {
          alert(data.message || "Login successful!");
        })
        .catch(error => {
          console.error('Error:', error);
          alert("There was an error. Please try again.");
        });
    });
  
    function continueWithGoogle() {
      window.location.href = "http://localhost:5000/auth/google";
    }
  </script>
    
</body>
</html>
